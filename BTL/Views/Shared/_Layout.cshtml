@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center">
                    <a class="navbar-brand me-4" href="/">BTL</a>

                    @{
                        var userRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
                        var userName = HttpContextAccessor.HttpContext.Session.GetString("Username");
                    }

                    <div class="d-flex">
                        <a class="nav-link text-dark me-3" href="/" style="font-weight: bold;">
                            Home
                        </a>

                        @if (userRole == "Admin")
                        {
                            <a class="nav-link text-primary me-3" href="/Parking/Index" style="font-weight: bold;">
                                🚧 Quản lý Ra/Vào
                            </a>
                        }

                        @if (userRole == "Admin")
                        {
                            <a class="nav-link text-danger me-3" href="/Manager/Revenue" style="font-weight: bold;">
                                💰 Doanh thu
                            </a>

                            <a class="nav-link text-danger me-3" href="/Manager/Tickets" style="font-weight: bold;">
                                ✅ Duyệt vé tháng
                            </a>
                        }

                        @if (userRole == "Customer")
                        {
                            <a class="nav-link text-success me-3" href="/MonthlyTicket/Register" style="font-weight: bold;">
                                🎫 Đăng ký vé tháng
                            </a>
                        }
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    @if (userRole != null)
                    {
                        <span class="nav-link text-dark me-2">Xin chào, <b>@userName</b></span>
                        <a class="btn btn-outline-secondary btn-sm" href="/Account/Logout">Đăng xuất</a>
                    }
                    else
                    {
                        <a class="btn btn-primary btn-sm" href="/Account/Login">Đăng nhập</a>
                    }
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BTL
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>