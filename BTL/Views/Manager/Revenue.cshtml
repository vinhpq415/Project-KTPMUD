@model IEnumerable<BTL.Models.LuotGuiXe>

@{
    ViewData["Title"] = "Doanh Thu";
}

<div class="container pt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger fw-bold">💰 BÁO CÁO DOANH THU</h2>
        <div class="bg-warning p-2 rounded fw-bold text-dark fs-5">
            Tổng thu dự kiến: @ViewBag.TotalRevenue?.ToString("N0") VNĐ
        </div>
    </div>

    <table class="table table-striped border">
        <thead class="table-dark">
            <tr>
                <th>Biển Số</th>
                <th>Loại Xe</th>
                <th>Giờ Vào</th>
                <th>Giờ Ra</th>
                <th>Thời gian gửi</th>
                <th>Loại Vé</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">@item.BienSoXe</td>
                    <td>@item.TheXe?.LoaiXe?.TenLoaiXe</td>
                    <td>@item.ThoiGianVao.ToString("dd/MM HH:mm")</td>
                    <td>@item.ThoiGianRa?.ToString("dd/MM HH:mm")</td>
                    <td>
                        @{
                            var duration = item.ThoiGianRa - item.ThoiGianVao;
                            <span>@duration?.ToString(@"hh\:mm")</span>
                        }
                    </td>
                    <td>
                        @if (item.TheXe?.LoaiVe == "Thang")
                        {
                            <span class="text-success fw-bold">Miễn phí (Vé tháng)</span>
                        }
                        else
                        {
                            <span class="text-secondary">Thu phí thường</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>