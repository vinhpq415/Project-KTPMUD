@model IEnumerable<BTL.Models.TheXe>

@{
    ViewData["Title"] = "Danh Sách Vé Tháng";
}

<div class="container pt-3">
    <h2 class="text-success fw-bold mb-4">DANH SÁCH VÉ THÁNG</h2>

    <table class="table table-bordered bg-white">
        <thead class="bg-success text-white">
            <tr>
                <th>Mã Thẻ</th>
                <th>Chủ Xe (User)</th>
                <th>Biển Số Đăng Ký</th>
                <th>Ngày Bắt Đầu</th>
                <th>Ngày Hết Hạn</th>
                <th>Trạng Thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaThe</td>
                    <td>
                        @if (item.NguoiDung != null)
                        {
                            @item.NguoiDung.TenDangNhap
                        }
                        else
                        {
                            <span>---</span>
                        }
                    </td>
                    <td class="fw-bold text-primary">@item.BienSoDangKy</td>
                    <td>@item.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                    <td class="text-danger fw-bold">@item.NgayHetHan?.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.NgayHetHan < DateTime.Now)
                        {
                            <span class="badge bg-danger">Hết hạn</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Đang hoạt động</span>
                        }
                    </td>
                    <td>
                        <form asp-action="DeleteTicket" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa vé này?');">
                            <input type="hidden" name="id" value="@item.MaThe" />
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>