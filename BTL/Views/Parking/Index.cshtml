@model IEnumerable<BTL.Models.ParkingTicket>
@using BTL.Enums

@{
    ViewData["Title"] = "Quản lý bãi xe";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-plus-circle"></i> Ghi nhận xe vào bãi
    </div>
    <div class="card-body">
        <form asp-action="CheckIn" method="post" class="row g-3">

            <div class="col-md-4">
                <label class="form-label">Loại phương tiện</label>

                <select name="vehicleType" id="vehicleType" class="form-select">
                    <option value="0">Xe đạp</option>
                    <option value="1">Xe máy</option>
                    <option value="2">Xe máy điện</option>
                    <option value="3">Xe ô tô</option>
                </select>
            </div>

            <div class="col-md-4" id="licensePlateGroup">
                <label class="form-label">Biển số xe</label>

                <input type="text" name="licensePlate" id="licensePlate" class="form-control" />
            </div>

            <div class="col-md-4 align-self-end">
                <button type="submit" class="btn btn-primary w-100">Xác nhận vào</button>
            </div>
        </form>

@if (TempData["Error"] != null)
{
            <div class="alert alert-danger mt-3">
                Lỗi: @TempData["Error"]
            </div>
}
@if (TempData["SuccessMessage"] != null)
{
            <div class="alert alert-success mt-3">
                @TempData["SuccessMessage"]
            </div>
}


<div class="card">
    <div class="card-header">
        <i class="fas fa-parking"></i> Danh sách xe đang gửi
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Loại xe</th>
                    <th>Biển số / Số vé</th>
                    <th>Thời gian vào</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.VehicleType.ToString()</td>
                        <td>
                            @if (item.VehicleType == VehicleType.Bicycle)
                            {
                                <span class="badge bg-secondary">Vé số: @item.TicketNumber</span>
                            }
                            else
                            {
                                <span class="badge bg-info text-dark">@item.LicensePlate</span>
                            }
                        </td>
                        <td>@item.TimeIn.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>
                            <form asp-action="CheckOut" method="post" onsubmit="return confirm('Xác nhận cho xe này ra khỏi bãi?');">
                                <input type="hidden" name="ticketId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Cho ra</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('vehicleType').addEventListener('change', function () {
            var licensePlateGroup = document.getElementById('licensePlateGroup');
            // 0 là giá trị của 'Bicycle' trong Enum
            if (this.value == '0') {
                licensePlateGroup.style.display = 'none';
            } else {
                licensePlateGroup.style.display = 'block';
            }
        });

        // Kích hoạt sự kiện change lúc tải trang
        document.getElementById('vehicleType').dispatchEvent(new Event('change'));
    </script>
}