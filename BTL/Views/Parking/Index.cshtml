@model IEnumerable<BTL.Models.LuotGuiXe>

@{
    ViewData["Title"] = "Bãi Xe Hiện Tại";
}

<div class="container-fluid pt-3">
    <h2 class="text-primary fw-bold border-bottom pb-2">📋 DANH SÁCH XE ĐANG GỬI</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@Html.Raw(TempData["SuccessMessage"])</div>
    }

    <div class="card shadow-sm mb-4 mt-3">
        <div class="card-body bg-light">
            <h5 class="card-title text-success fw-bold">Nhận xe vào bãi</h5>
            <form action="/Parking/CheckIn" method="post" class="row g-3">
                <div class="col-md-3">
                    <select name="maLoaiXe" class="form-select">
                        <option value="1">Xe máy</option>
                        <option value="2">Ô tô</option>
                        <option value="3">Xe đạp</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" name="bienSo" class="form-control" placeholder="Nhập biển số xe..." required />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success w-100 fw-bold">Vào Bến</button>
                </div>
            </form>
        </div>
    </div>

    <table class="table table-hover align-middle shadow-sm bg-white rounded">
        <thead class="bg-primary text-white">
            <tr>
                <th>Mã Thẻ</th>
                <th>Biển Số</th>
                <th>Loại Xe</th>
                <th>Giờ Vào</th>
                <th>Loại Vé</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold text-secondary">@item.MaThe</td>
                    <td class="fw-bold text-primary">@item.BienSoXe</td>
                    <td>
                        <span class="badge bg-info text-dark">
                            @item.TheXe?.LoaiXe?.TenLoaiXe
                        </span>
                    </td>
                    <td>@item.ThoiGianVao.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        @if (item.TheXe?.LoaiVe == "Thang")
                        {
                            <span class="badge bg-success">Vé Tháng</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Vãng Lai</span>
                        }
                    </td>
                    <td>
                        <form action="/Parking/CheckOut" method="post" style="display:inline;">
                            <input type="hidden" name="ticketId" value="@item.MaLuotGui" />
                            <button type="submit" class="btn btn-warning btn-sm fw-bold">Cho Xe Ra</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>