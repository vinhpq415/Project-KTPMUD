@model BTL.Models.TheXe
@{
    ViewData["Title"] = "Đăng Ký Vé Tháng";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3 class="fw-bold mb-0">ĐĂNG KÝ VÉ THÁNG</h3>
                    <small>Tiết kiệm chi phí - Ra vào tiện lợi</small>
                </div>
                <div class="card-body p-4">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form action="/MonthlyTicket/Register" method="post">

                        <div class="mb-3">
                            <label class="form-label fw-bold">Loại xe</label>
                            <select name="vehicleType" class="form-select" required>
                                <option value="1">Xe máy</option>
                                <option value="2">Ô tô</option>
                                <option value="3">Xe đạp</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Biển số xe *</label>
                            <input type="text" name="licensePlate" class="form-control" placeholder="VD: 29A-12345" required />
                            <div class="form-text text-muted">Nhập chính xác để hệ thống nhận diện.</div>
                        </div>

                        <div class="alert alert-warning text-center mt-4">
                            <span class="d-block text-muted">Chi phí dự kiến (1 tháng)</span>
                            <h3 class="text-danger fw-bold my-1">45.000 đ</h3>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success fw-bold text-uppercase py-2">
                                Gửi đăng ký ngay
                            </button>
                            <a href="/Home/Index" class="btn btn-outline-secondary">Quay lại trang chủ</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>